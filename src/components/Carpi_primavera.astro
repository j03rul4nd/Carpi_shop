---
import bgimage from '/ultimos_lanzamientos/ultimo_lanzamiento.png'
import Section_store from "../components/section_store.astro";

const response = await fetch("http://localhost:3000/posts/index.json")

const post = await response.json();
//nos devuleve Collection un array con los objetos que tengan el tag Ultimos lanzamientos
const Collection = post.filter((item) => {
  return item.tag.collection === "ultimos_lanzamientos";
});
---

<Section_store 
title_section="Carpi Primavera" 
sub_section="Las pulseras del momento" 
background_1="background:#D2451E;"
background_2="background:#7e2912;"
Color="color: White;"
img_shop_section={bgimage} 
bgimage_1={Collection[0].url}
bgimage_2={Collection[1].url}
bgimage_3={Collection[2].url}
bgimage_4={Collection[3].url}
title_item_1={Collection[0].title}
title_item_2={Collection[1].title}
title_item_3={Collection[2].title}
title_item_4={Collection[3].title}
price_item_1={Collection[0].price}
price_item_2={Collection[1].price}
price_item_3={Collection[2].price}
price_item_4={Collection[3].price}
discount_price_1={Collection[0].discount_price}
discount_price_2={Collection[1].discount_price}
discount_price_3={Collection[2].discount_price}
discount_price_4={Collection[3].discount_price}
before_price_1={Collection[0].before_price}
before_price_2={Collection[1].before_price}
before_price_3={Collection[2].before_price}
before_price_4={Collection[3].before_price}
></Section_store>