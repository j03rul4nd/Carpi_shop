---
const {txt_sub_portada, background_1, Color, title_section, sub_section, img_shop_section} = Astro.props;

---

<style>
    .h3_section_store{
        margin-bottom: 0px;
        font-size: 1.5rem;
        letter-spacing: -.24px;
        line-height: 2rem;
        font-weight: 600;
    }
    .section_store{
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        margin-bottom: 3rem;
    }
    .portada_img_section_shop{
        width: 100%;
    }
    .header_section_store{
        padding-top: 10px;
        padding-left: 22px;
        background: #a2a3a8;
        display: flex;
        /* margin: 0px; */
        gap: 0px;
        flex-direction: column;
    }
    .contain_the_section_color_store{
        background: #e6e6e8;
        width: -webkit-fill-available;

    }
    .contain_section_store{
        
        /* background: #EFEFEF; */
        padding-left: 22px;
        margin-top: 15px;
        margin-top: 5px;
        gap: 50px;
        /* max-width: 276px; */
        display: flex;
        margin-left: 22px;
        flex-wrap: nowrap;
        overflow-x: scroll;
        width: auto;
        -webkit-overflow-scrolling: touch;
        margin-bottom: 5px;
        scroll-snap-type: x mandatory;
    }
    .sub_section_shop_header{
        font-size: 1.5rem;
        letter-spacing: -.24px;
        line-height: 2rem;
        font-weight: 400;
        font-family: Tiempos,Times New Roman,serif;
        margin: 0px;
        margin-bottom: 6px;
    }
    .part_link_ref{
        padding-bottom: 1.5rem;
    }
    .link_ref_span{
        display: flex;
        padding-top: 1.5rem;
        gap: 5px;
        align-items: center;
    }


    @media only screen and (min-width:768px) {
    .header_section_store {
        padding-top: 10px;
        padding-left: 22px;
 
        display: flex;
        /* gap: 63px; */

        padding-top: 1.5rem;

        border: 0;
        padding-left: 24px;

        justify-content: space-between;
        flex-direction: initial;
    }
    .portada_img_section_shop{
        width: 50%;
    }

}

</style>
<div class="resp_back" style={background_1}>
    <div class="section_store">
        <div class="header_section_store" style={background_1}>
            <div class="txt_header_section_store_contain">
                <h3 style={Color} class="h3_section_store">{title_section}</h3>
                <p class="sub_section_shop_header" style={Color}>{sub_section}</p>
                <div class="part_link_ref">
                    <span style={Color}  class="txt_ref_link">{txt_sub_portada}</span>

                </div>
            </div>
            <img class="portada_img_section_shop"  src={img_shop_section} alt="" srcset="">
        </div>
    </div>
</div>